{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "lib": ["esnext", "dom"],
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*", "src/*"]
        }
    },
    "include": [
        "src/**/*",
        "public/**/*",
        "server.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
